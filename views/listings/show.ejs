<% layout("/layouts/boilerplate") %>
<body>
    <h3>LISTING DETAILS : </h3>
    <ul>
        <li>
            <%= listing.title %>
        </li>
        <li>
            <%= listing.description %>
        </li>
        <li>
            <%= listing.price %>
        </li>
        <li>
            <%= listing.location %>
        </li> 
        <li>
            <%= listing.country %>
        </li> 
    </ul>
    <br><br>
    <a href="/listings/<%= listing._id %>/edit">EDIT THIS LISTING</a>
    <form action="/listings/<%= listing._id%>?_method=DELETE" method="POST">
        <button>DELETE THIS LISTING </button>
    </form>
</body>
