<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <%= listing.title %>
                </h3>
            </div>
            <div class="card col-6 offset-3 listing-cards">
                <img src=<%=listing.image %> class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                    <p class="card-text">
                        <br>
                        <%= listing.description %>
                            <br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %>
                                <br>
                                <%= listing.location %>
                                    <br>
                                    <%= listing.country %>
                    </p>
                </div>
            </div>
            <br />
            <div class="btns mb-3">
                <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-5">Edit</a>
                <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark offset-7">DELETE</button>
                </form>
            </div>
            <br/>
            <hr/>
            <div class="col-8 offset-3 mb-3 mt-3">
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing.id %>/reviews" method="post">
                    <div>
                        <label for="rating" class="form-label">RATING</label>
                        <input type="range" min="1" max="5" id="rating", name="review[rating]">
                    </div>
                    <div>
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" cols="5" rows="5" class="form-control"></textarea>
                    </div>
                    <br/>
                    <button class="btn btn-dark col-8 offset-2">Submit</button>
                </form>
            </div>
        </div>
    </body>